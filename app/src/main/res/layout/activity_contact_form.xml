<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main"
    tools:context="com.appdroid.admin.sagysansadadarshgramyojna.contact_form">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:background="@mipmap/bg_main"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:paddingLeft="3dp"
                android:text="Name"
                android:textAllCaps="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/your_name"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingLeft="3dp"
                android:text="Email"
                android:textAllCaps="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/your_email"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:paddingLeft="3dp"
                android:text="Subject"
                android:textAllCaps="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/your_subject"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="15dp"
                android:paddingLeft="3dp"
                android:text="Message"
                android:textAllCaps="true"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/your_message"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:height="180dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textColor="@color/text_login_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/post_message"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:backgroundTint="@color/Button_login"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="Send"
                android:textAllCaps="true"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
